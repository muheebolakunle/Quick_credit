{
  "name": "Quick_credit",
  "version": "1.0.0",
  "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals. This helps solve problems of financial inclusion as a way to alleviate poverty and empower low income earners.",
  "main": "app.js",
  "engines": {
    "node": "9.10.1"
  },
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./server -s",
    "build": "npm run clean && npm run build-babel",
    "start": "cross-env NODE_ENV=development npm run build && node ./build/app.js",
    "devstart": "cross-env NODE_ENV=development nodemon --exec babel-node server/app.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=text-summary mocha --timeout 15000 -c ./server/v1/tests/**/*.js --exit --require babel-core/register",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muheebolakunle/Quick_credit.git"
  },
  "keywords": [],
  "author": "Muheeb Olakunle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/muheebolakunle/Quick_credit/issues"
  },
  "homepage": "https://github.com/muheebolakunle/Quick_credit#readme",
  "dependencies": {
    "@hapi/joi": "^15.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "braces": "^2.3.2",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "pg": "^7.11.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.0.0"
  }
}
